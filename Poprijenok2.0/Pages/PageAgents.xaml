<Page x:Class="Poprijenok2._0.Pages.PageAgents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Poprijenok2._0.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAgents"
      IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="tbFinder" Grid.Row="0" Grid.Column="0" TextChanged="tbFinder_TextChanged" Margin="5, 1, 5, 1"/>
        <ComboBox Name="cbSort" Grid.Row="0" Grid.Column="1" SelectionChanged="cbSort_SelectionChanged" Margin="5, 1, 5, 1"/>
        <ComboBox Name="cbTypes" Grid.Row="0" Grid.Column="2" SelectionChanged="cbTypes_SelectionChanged" Margin="5, 1, 5, 1"/>

        <ListView Grid.Row="1" Name="lvAgents" Grid.ColumnSpan="3" Margin="2">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding LogoAgent}" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding AgentType}"/>
                                <TextBlock Text=" | "/>
                                <TextBlock Text="{Binding Title}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding QQQQQ, StringFormat={}{0} продаж за год}"/>
                                <TextBlock Text="{Binding Phone}"/>
                            <TextBlock Text="{Binding Priority, StringFormat={}Приоритетность: {0}}"/>
                            </StackPanel>
                        <Button Name="btnEdit" Content="Редактиовать" Click="btnEdit_Click" Grid.Column="2"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="00" Grid.Column="3"/>
                            <TextBlock Text="%" Grid.Column="3"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <Button Name="btnAdd" Content="Добавить" Grid.Row="2" Grid.Column="1" Click="btnAdd_Click"/>
    </Grid>
</Page>
